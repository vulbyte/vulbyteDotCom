			function CE(args = {}) {
				//init args
				const def = {
					elem: args.elem || "div",
					innerText: args.innerText || undefined,
					innerHTML: args.innerHTML || undefined, // will overwrite innerText
					href: args.href || undefined,
					alt: args.alt || undefined,
					src: args.src || undefined,
					id: args.id || undefined,
				};

				let elem = document.createElement(def.elem);
				if (def.innerText != undefined) {
					elem.innerText = def.innerText;
				}
				if (def.innerHTML != undefined) {
					elem.innerHTML = def.innerHTML;
				}
				elem.href = def.href;
				elem.target = "_blank";
				elem.alt = def.alt;
				elem.src = def.src;
				if (def.id != undefined) {elem.id = def.id};

				//console.log("returning element: " + elem);
				return elem;
			}

			let table = document.getElementById("review_table").children[0];
			for (let i = 0; i < reviews.length; ++i) {
				let row = CE({elem: "tr"});

				//column 1
				let td1 = CE({elem: "td"});
				let img = CE({elem: "img"});
				img.src = reviews[i].img;
				img.width = "460";
				img.height = "215";
				td1.appendChild(img);
				if (reviews[i].links != undefined) {
					console.log(`links for ${reviews[i].name} are: `, reviews[i].links);
					let links = CE({elem: "div", id: "store_links"});
					links.id = "store_links";
					links.style.display = "flex";
					links.style.justifyContent = "space-evenly";
					let a, storeIcon, storeName, icon;
					console.log("stores linked:", Array(reviews[i].links).length);
					for (let j = 0; j < Object.keys(reviews[i].links).length; ++j) {
						storeName = Object.keys(reviews[i].links)[j];
						console.log("storename: ", `"${storeName}"`);
						a = CE({elem: "a", href: reviews[i].links[storeName]});
						icon = icons[storeName];
						console.log("storeIcon:", icon);
						storeIcon = CE({
							elem: "img", src: `${icon}`, alt: storeName, id: storeName
						});
						a.appendChild(storeIcon);
						links.appendChild(a);
					};
					td1.appendChild(links);
				}
				row.appendChild(td1);

				let rating, r8, r8_color;
				//column 2
				let td2 = CE({elem: "td"});
				//overall
				let overall_r8 = 0;
				let count = 0;
				let rankings = Object.values(reviews[i].rankings);
				console.log("RANKINGS: ", rankings);
				for (let j = 0; j < rankings.length; ++j) {
					overall_r8 += rankings[j];
					count += 1;
				}
				//overall_r8 = overall_r8 / count;
				console.log("overall/max:" + overall_r8 / count);
				let overall = CE({elem: "div", innerText: `${(overall_r8 / count)}/10`});
				overall_r8 = overall_r8 / count; //invert for colors
				r8_color =
					"#"
					+ Math.floor((((overall_r8 - 11) * -1) / 10) * 255).toString(16)
					+ Math.floor(overall_r8 / 11 * 255).toString(16)
					+ "00"
					;
				console.log("OVERALL color: " + r8_color);
				overall.style.color = r8_color;
				overall.style.margin = "auto";
				overall.style.textAlign = "center";
				td2.appendChild(overall);
				row.appendChild(td2);

				//gameplay
				let gameplay = CE({elem: "div", innerText: "gameplay"});
				r8 = reviews[i].rankings.gameplay;
				rating = CE({elem: "span", innerText: `${r8}/10`});
				r8_color =
					"#"
					+ Math.floor((((r8 - 11) * -1) / 10) * 255).toString(16)
					+ Math.floor(r8 / 11 * 255).toString(16)
					+ "ff"
					;
				//console.log("rating color: " + r8_color);
				rating.style.color = r8_color;
				gameplay.appendChild(rating);
				td2.appendChild(gameplay);
				row.appendChild(td2);

				//story
				let story = CE({elem: "div", innerText: "story"});
				r8 = reviews[i].rankings.story;
				rating = CE({elem: "span", innerText: `${r8}/10`});
				r8_color =
					"#"
					+ Math.floor((((r8 - 11) * -1) / 10) * 255).toString(16)
					+ Math.floor(r8 / 11 * 255).toString(16)
					+ "ff"
					;
				console.log("rating color: " + r8_color);
				rating.style.color = r8_color;
				story.appendChild(rating);
				td2.appendChild(story);
				row.appendChild(td2);

				//graphics	
				let graphics = CE({elem: "div", innerText: "graphics"});
				r8 = reviews[i].rankings.graphics;
				rating = CE({elem: "span", innerText: `${r8}/10`});
				r8_color =
					"#"
					+ Math.floor((((r8 - 11) * -1) / 10) * 255).toString(16)
					+ Math.floor(r8 / 11 * 255).toString(16)
					+ "ff"
					;
				//console.log("rating color: " + r8_color);
				rating.style.color = r8_color;
				graphics.appendChild(rating);
				td2.appendChild(graphics);
				row.appendChild(td2);

				//audio
				let audio = CE({elem: "div", innerText: "audio"});
				r8 = reviews[i].rankings.audio;
				rating = CE({elem: "span", innerText: `${r8}/10`});
				r8_color =
					"#"
					+ Math.floor((((r8 - 11) * -1) / 10) * 255).toString(16)
					+ Math.floor(r8 / 11 * 255).toString(16)
					+ "ff"
					;
				console.log("rating color: " + r8_color);
				rating.style.color = r8_color;

				audio.appendChild(rating);
				td2.appendChild(audio);
				row.appendChild(td2);


				//column 3
				let td3 = CE({elem: "td"});
				let paraHolder = CE({elem: "div"});
				let p = CE({elem: "p", innerHTML: reviews[i].review});
				paraHolder.appendChild(p);
				td3.appendChild(paraHolder);
				row.appendChild(td3);

				//append the rest
				table.appendChild(row);
			}
		</script>
